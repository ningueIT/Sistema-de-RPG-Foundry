<div class="itens-grid" style="display:grid; grid-template-columns: 2fr 1fr; gap:12px; align-items:start;">
  <div class="itens-list-column">
    <h3 class="jem-section-title">Aptidões (Ativas)</h3>

    <div style="margin-bottom:8px;">
      <button type="button" class="aptidao-open-map-btn" data-action="sync-aptidoes">Sincronizar Aptidões (criar Items faltantes)</button>
    </div>

    {{#if aptidoesAtivas.length}}
      <ol class="items-list jem-items-list">
        {{#each aptidoesAtivas as |item|}}
          <li class="item flexrow jem-item-row" data-item-id="{{item._id}}">
              <div class="item-name flexrow">
                <img class="item-image" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
                <button type="button" class="jem-item-name item-use" data-action="use-aptidao">{{item.name}}</button>
              {{#if item.system.custo.value}}
                <span class="item-action">{{item.system.custo.value}} PE</span>
              {{/if}}
              {{#if item.system.acao.value}}
                <span class="item-action">{{item.system.acao.value}}</span>
              {{/if}}
            </div>
            <div class="item-controls flexrow jem-item-controls">
              <a class="item-control item-edit" title="Editar"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Remover"><i class="fas fa-trash"></i></a>
            </div>
          </li>
        {{/each}}
      </ol>
    {{else}}
      <p class="jem-empty">Nenhuma aptidão ativa como Item ainda. Ative uma aptidão na aba Aptidão.</p>
    {{/if}}
  </div>

  <div class="uniform-column">
    <h3 class="jem-section-title">Uniforme</h3>
    <div class="uniform-slot" title="Arraste um Uniforme aqui" style="min-height:120px; display:flex; align-items:center; justify-content:center; border:1px dashed rgba(255,255,255,0.06); border-radius:8px; padding:8px; background:linear-gradient(180deg, rgba(255,255,255,0.02), transparent);">
      {{#if uniformItem}}
        <div class="uniform-card" data-item-id="{{uniformItem._id}}" style="display:flex; gap:10px; align-items:center;">
          <img src="{{uniformItem.img}}" width="64" height="64" style="border-radius:6px; object-fit:cover; border:1px solid rgba(255,255,255,0.04);"/>
          <div style="display:flex; flex-direction:column;">
            <strong style="color:#fff">{{uniformItem.name}}</strong>
            <small style="color:#cfcfcf">Tipo: {{uniformItem.type}}</small>
            {{#if uniformItem.system.equipado}}
              <span style="margin-top:6px; padding:4px 8px; background:rgba(102,255,214,0.06); color:#66ffd6; border-radius:6px; font-size:0.85em;">Equipado: {{uniformItem.system.equipado}}
                {{#if uniformItem.system.uniforme.total}}
                  <small style="margin-left:6px; color:#dfffe9; font-weight:700;">(CA +{{uniformItem.system.uniforme.total}})</small>
                {{/if}}
              </span>
            {{/if}}
          </div>
          <a class="item-control uniform-remove" title="Remover Uniforme" style="margin-left:auto; color:#ff8a8a; text-decoration:none; display:flex; align-items:center; padding:6px; border-radius:6px;">
            <i class="fas fa-times"></i>
          </a>
        </div>
      {{else}}
        <div class="uniform-empty" style="text-align:center; color:#ccc;">
          <i class="fas fa-tshirt" style="font-size:28px; display:block; margin-bottom:8px; color:rgba(157,78,221,0.9)"></i>
          <div>Arraste um <strong>Uniforme</strong> aqui</div>
          <div style="font-size:11px; color:#999; margin-top:6px;">(ou clique no ícone do item e escolha <em>Adicionar</em>)</div>
        </div>
      {{/if}}
    </div>
  </div>
</div>

            <h3 class="jem-section-title">COMBATE</h3>

            <div style="display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px; margin-bottom: 20px;">
                <div style="grid-column: 1 / -1; text-align: right; margin-bottom: 6px; display:flex; gap:8px; justify-content:flex-end;">
                    <!-- Botões de Descanso removidos: usar macros -->
                </div>
                                <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                                        <label>DEFESA</label>
                                        <input type="number" name="system.combate.defesa.value" value="{{system.combate.defesa.value}}">
                                        {{#if system.combate.defesa.breakdown}}
                                            <div style="margin-top:8px; display:flex; gap:8px; justify-content:center; flex-wrap:wrap;">
                                                {{#with system.combate.defesa.breakdown}}
                                                    <span style="background:rgba(155,77,202,0.12); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                                        <span style="opacity:0.85; font-size:10px;">base</span>
                                                        <strong style="color:#f5e8ff">{{base}}</strong>
                                                    </span>
                                                    <span style="background:rgba(0,0,0,0.26); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                                        <span style="opacity:0.85; font-size:10px;">dex</span>
                                                        <strong style="color:#ffd580">{{dex}}</strong>
                                                    </span>
                                                    <span style="background:rgba(0,0,0,0.18); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                                        <span style="opacity:0.85; font-size:10px;">equip</span>
                                                        <strong style="color:#bfe6c6">{{equipment}}</strong>
                                                    </span>
                                                    <span style="background:rgba(0,0,0,0.18); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                                        <span style="opacity:0.85; font-size:10px;">adhoc</span>
                                                        <strong style="color:#a9d0ff">{{adHoc}}</strong>
                                                    </span>
                                                {{/with}}
                                            </div>
                                        {{/if}}
                                </div>
                            <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                                <label>CD</label>
                                <input type="number" name="system.combate.cd.value" value="{{system.combate.cd.value}}">
                                <div style="margin-top:8px; display:flex; gap:8px; justify-content:center; flex-wrap:wrap;">
                                    {{#with system.combate.cd.breakdown}}
                                        <span style="background:rgba(155,77,202,0.12); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                            <span style="opacity:0.85; font-size:10px;">base</span>
                                            <strong style="color:#f5e8ff">{{base}}</strong>
                                        </span>
                                        <span style="background:rgba(0,0,0,0.22); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                            <span style="opacity:0.85; font-size:10px;">nv/2</span>
                                            <strong style="color:#d9c7ff">{{metadeNivel}}</strong>
                                        </span>
                                        <span style="background:rgba(0,0,0,0.26); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                            <span style="opacity:0.85; font-size:10px;">attr</span>
                                            <strong style="color:#ffd580">{{atributo}}</strong>
                                        </span>
                                        <span style="background:rgba(0,0,0,0.18); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                            <span style="opacity:0.85; font-size:10px;">treino</span>
                                            <strong style="color:#bfe6c6">{{treinamento}}</strong>
                                        </span>
                                        <span style="background:rgba(0,0,0,0.18); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                            <span style="opacity:0.85; font-size:10px;">outros</span>
                                            <strong style="color:#a9d0ff">{{outros}}</strong>
                                        </span>
                                    {{/with}}
                                </div>
                            </div>
                <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                    <label>MOVIMENTO</label>
                    <div style="display: flex; align-items: center; justify-content: center; gap: 2px;">
                        <input type="number" value="{{system.combate.movimento.value}}" readonly disabled>
                        <span style="font-size: 10px; color: #888;">m</span>
                    </div>
                    {{#if system.combate.movimento.breakdown}}
                        <div style="margin-top:8px; display:flex; gap:8px; justify-content:center; flex-wrap:wrap;">
                            {{#with system.combate.movimento.breakdown}}
                                <span style="background:rgba(155,77,202,0.12); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                    <span style="opacity:0.85; font-size:10px;">base</span>
                                    <strong style="color:#f5e8ff">{{base}}</strong>
                                </span>
                                <span style="background:rgba(0,0,0,0.18); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                    <span style="opacity:0.85; font-size:10px;">bônus</span>
                                    <strong style="color:#bfe6c6">{{bonus}}</strong>
                                </span>
                                <span style="background:rgba(0,0,0,0.22); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                    <span style="opacity:0.85; font-size:10px;">x</span>
                                    <strong style="color:#ffd580">{{multiplicador}}</strong>
                                </span>
                            {{/with}}
                        </div>
                    {{/if}}
                </div>

                <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                    <label>RD</label>
                    <div class="status-inputs flexrow" style="gap: 6px; align-items:center; justify-content:center;">
                        <input type="number" name="system.combate.rd.value" value="{{system.combate.rd.value}}" style="width:70px; text-align:center;" title="RD (reduzível)"/>
                        <span style="opacity:0.7; font-size:12px;">+</span>
                        <input type="number" name="system.combate.rd.irreducivel" value="{{system.combate.rd.irreducivel}}" style="width:70px; text-align:center;" title="RD irredutível"/>
                    </div>
                    <div style="margin-top:6px; font-size:11px; opacity:0.75; text-align:center;">reduzível + irredutível</div>
                </div>
                <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                    <label class="roll-initiative rollable" style="cursor: pointer; color: #9b4dca;">
                        <i class="fas fa-dice-d20"></i> INICIATIVA
                    </label>
                    <input type="number" value="{{system.combate.iniciativa.value}}" readonly disabled>
                    {{#if system.combate.iniciativa.breakdown}}
                        <div style="margin-top:8px; display:flex; gap:8px; justify-content:center; flex-wrap:wrap;">
                            {{#with system.combate.iniciativa.breakdown}}
                                <span style="background:rgba(0,0,0,0.26); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                    <span style="opacity:0.85; font-size:10px;">dex</span>
                                    <strong style="color:#ffd580">{{dex}}</strong>
                                </span>
                                <span style="background:rgba(0,0,0,0.18); color:#fff; padding:4px 8px; border-radius:10px; font-size:11px; display:flex; gap:6px; align-items:center;">
                                    <span style="opacity:0.85; font-size:10px;">outros</span>
                                    <strong style="color:#a9d0ff">{{outrosTotal}}</strong>
                                </span>
                            {{/with}}
                        </div>
                    {{/if}}
                </div>
                <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                    <label class="roll-dice rollable" data-formula="1d8" data-flavor="Dados de Vida">
                        <i class="fas fa-dice"></i> DADOS VIDA
                    </label>
                    <input type="text" name="system.combate.dadosVida.lado" value="{{system.combate.dadosVida.lado}}" style="font-size: 12px; height: 20px; margin-bottom: 3px; text-align:center;" placeholder="Ex: 1d8">
                    <div class="status-inputs flexrow" style="gap: 2px;">
                        <input type="number" value="{{system.combate.dadosVida.value}}" style="font-size: 14px; height: 25px;" readonly disabled>
                        <span style="color:#888;">/</span>
                        <input type="number" value="{{system.combate.dadosVida.max}}" style="font-size: 14px; height: 25px;" readonly disabled>
                    </div>
                </div>
                <div class="combat-card flexcol flex-group-center" style="grid-column: span 1;">
                    <label class="roll-dice rollable" data-formula="1d6" data-flavor="Dados de Energia">
                        <i class="fas fa-dice"></i> DADOS ENERGIA
                    </label>
                    <input type="text" name="system.combate.dadosEnergia.lado" value="{{system.combate.dadosEnergia.lado}}" style="font-size: 12px; height: 20px; margin-bottom: 3px; text-align:center;" placeholder="Ex: 1d6">
                    <div class="status-inputs flexrow" style="gap: 2px;">
                        <input type="number" value="{{system.combate.dadosEnergia.value}}" style="font-size: 14px; height: 25px;" readonly disabled>
                        <span style="color:#888;">/</span>
                        <input type="number" value="{{system.combate.dadosEnergia.max}}" style="font-size: 14px; height: 25px;" readonly disabled>
                    </div>
                </div>
            </div>
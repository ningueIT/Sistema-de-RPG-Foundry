<div class="status-panel grid grid-2col" style="gap: 15px; margin-bottom: 10px;">
    
    <div class="status-card hp">
        <label>Pontos de Vida</label>
        <div class="status-inputs flexrow">
            <input type="number" name="system.recursos.hp.value" value="{{system.recursos.hp.value}}" placeholder="Atual"/>
            <span class="sep">/</span>
            <input type="number" name="system.recursos.hp.max" value="{{system.recursos.hp.max}}" placeholder="Max"/>
        </div>
        <div class="bar-bg"><div class="bar-fill" style="width: {{system.recursos.hp.percent}}%;"></div></div>
    </div>

    <div class="status-card pe">
        <label>Pontos de Energia</label>
        <div class="status-inputs flexrow">
            <input type="number" name="system.recursos.energia.value" value="{{system.recursos.energia.value}}" placeholder="Atual"/>
            <span class="sep">/</span>
            <input type="number" name="system.recursos.energia.max" value="{{system.recursos.energia.max}}" placeholder="Max"/>
        </div>
        <div class="bar-bg"><div class="bar-fill" style="width: {{system.recursos.energia.percent}}%;"></div></div>
    </div>

    <div class="status-card alma">
        <label>Integridade</label>
        <div class="status-inputs flexrow">
            <input type="number" name="system.recursos.integridade.value" value="{{system.recursos.integridade.value}}" placeholder="Atual"/>
            <span class="sep">/</span>
            <input type="number" name="system.recursos.integridade.max" value="{{system.recursos.integridade.max}}" placeholder="Max"/>
        </div>
        <div class="bar-bg"><div class="bar-fill" style="width: {{system.recursos.integridade.percent}}%;"></div></div>
    </div>

    <div class="status-card humanidade">
        <label>Humanidade</label>
        <div class="status-inputs flexrow">
            <input type="number" name="system.recursos.humanidade.value" value="{{system.recursos.humanidade.value}}" placeholder="Atual"/>
            <span class="sep">/</span>
            <input type="number" name="system.recursos.humanidade.max" value="{{system.recursos.humanidade.max}}" placeholder="Max"/>
        </div>
        <div class="bar-bg"><div class="bar-fill" style="width: {{system.recursos.humanidade.percent}}%;"></div></div>
    </div>

</div>

{{#if (eq actor.type "inimigo")}}
    <div class="inimigo-metrics" style="margin-bottom: 12px;">
        <div class="inimigo-metric-card">
            <label>ND</label>
            <input type="number" name="system.nd" value="{{system.nd}}" min="{{system.limites.ndMin}}" max="20" data-dtype="Number"/>
        </div>

        <div class="inimigo-metric-card">
            <label>BT</label>
            <input type="number" value="{{system.bt}}" readonly disabled/>
        </div>

        <div class="inimigo-metric-card">
            <label>Atenção</label>
            <input type="number" value="{{system.percepcao.atencao}}" readonly disabled/>
        </div>

        <div class="inimigo-metric-card">
            <label>Defesa</label>
            <input type="number" value="{{system.combate.defesa.value}}" readonly disabled/>
        </div>

        <div class="inimigo-metric-card">
            <label>Iniciativa</label>
            <input type="number" value="{{system.combate.iniciativa.value}}" readonly disabled/>
        </div>

        <div class="inimigo-metric-card">
            <label>Mov. base</label>
            <input type="number" name="system.combate.movimento.base" value="{{system.combate.movimento.base}}" step="0.5" data-dtype="Number"/>
        </div>
    </div>
{{/if}}
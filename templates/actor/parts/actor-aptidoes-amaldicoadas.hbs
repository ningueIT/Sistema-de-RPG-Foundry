<h3 class="aptidoes-title">Habilidades Amaldiçoadas</h3>

{{#if aptidoesAmaldicoadasCategorias.length}}
  {{#each aptidoesAmaldicoadasCategorias as |cat|}}
    <h3 class="jem-section-title">{{cat.label}}</h3>

    <ol class="items-list jem-items-list">
      <li class="items-header flexrow jem-item-row" aria-hidden="true">
        <div class="item-name flexrow">Aptidão</div>
        <div class="jem-item-col jem-item-col--pe">Custo</div>
        <div class="jem-item-col jem-item-col--acao">Ação</div>
        <div class="jem-item-col">Requisito</div>
        <div class="item-controls flexrow jem-item-controls"></div>
      </li>

      {{#each cat.items as |item|}}
        <li class="item flexrow jem-item-row" data-item-id="{{item._id}}">
          <div class="item-name flexrow">
            <img class="item-image" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
            <button type="button" class="jem-item-name item-edit">{{item.name}}</button>
          </div>

          <div class="jem-item-col jem-item-col--pe">
            {{#if item.system.custoTexto.value}}
              {{item.system.custoTexto.value}}
            {{else}}
              {{#if item.system.custo.value}}
                {{item.system.custo.value}} PE
              {{else}}
                —
              {{/if}}
            {{/if}}
          </div>

          <div class="jem-item-col jem-item-col--acao">
            {{#if item.system.ativacao.value}}
              {{item.system.ativacao.value}}
            {{else}}
              {{item.system.acao.value}}
            {{/if}}
          </div>

          <div class="jem-item-col">{{item.system.requisito.value}}</div>

          <div class="item-controls flexrow jem-item-controls">
            <a class="item-control item-edit" title="Editar"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Remover"><i class="fas fa-trash"></i></a>
          </div>
        </li>
      {{/each}}
    </ol>
  {{/each}}
{{else}}
  <p class="jem-empty">Nenhuma aptidão amaldiçoada no ator. Importe do compêndio e arraste para o personagem.</p>
{{/if}}

<h3 class="jem-section-title">Aptidões (Passivas)</h3>

<ol class="items-list jem-items-list" data-aptidao-tipo="passiva">
  {{#if aptidoesPassivas.length}}
    {{#each aptidoesPassivas as |item|}}
      <li class="item flexrow jem-item-row" data-item-id="{{item._id}}">
        <div class="item-name flexrow">
          <img class="item-image" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
          <h4 class="jem-item-name">{{item.name}}</h4>
          <span class="item-action">Passiva</span>
        </div>
        <div class="item-controls flexrow jem-item-controls">
          <a class="item-control item-edit" title="Editar"><i class="fas fa-edit"></i></a>
        </div>
      </li>
    {{/each}}
  {{else}}
    <li class="jem-empty">Arraste uma Aptidão passiva do Compendium para cá.</li>
  {{/if}}
</ol>
